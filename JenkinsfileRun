pipeline {
    agent any

    tools {
        jdk 'jdk-apple'
        maven 'mvn'
    }



    stages {
        stage('Download') {
            steps {
               sh 'curl -u user:password -X GET "http://localhost:8081/service/rest/v1/search/assets/download?sort=version&group=org.springframework.samples&name=spring-petclinic&maven.extension=jar&maven.classifier"'
               sh 'java -jar spring-petclinic*'
            }
        }
        stage('Run') {
            when {
              expression {
                currentBuild.result == null || currentBuild.result == 'SUCCESS'
              }
            }
            steps {
                sh 'mvn deploy'
            }
        }
    }
}
